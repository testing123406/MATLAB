% Set the subjects
subjects = {'sub01', 'sub09', 'sub10', 'sub12', 'sub15'};

% Define the montages (electrode setups)
montages = {
    % Montage 1
    struct('electrode1', struct('centre', 'CP5', 'pos_ydir', 'C1', 'dimensions', [50, 50]), ...
           'electrode2', struct('centre', 'FP2', 'pos_ydir', 'F3', 'dimensions', [50, 70])),

    % Montage 2
    struct('electrode1', struct('centre', 'CP5', 'pos_ydir', 'C1', 'dimensions', [50, 50]), ...
           'electrode2', struct('centre', 'FP2', 'pos_ydir', 'F3', 'dimensions', [50, 70])),

    % Montage 3
    struct('electrode1', struct('centre', 'C3', 'pos_ydir', 'C1', 'dimensions', [50, 50]), ...
           'electrode2', struct('centre', 'AF4', 'pos_ydir', 'F6', 'dimensions', [50, 70])),

    % Montage 4
    struct('electrode1', struct('centre', 'F3', 'pos_ydir', 'Fz', 'dimensions', [60, 60]), ...
           'electrode2', struct('centre', 'P4', 'pos_ydir', 'Pz', 'dimensions', [60, 80])),

    % Montage 5
    struct('electrode1', struct('centre', 'Fz', 'pos_ydir', 'Cz', 'dimensions', [55, 55]), ...
           'electrode2', struct('centre', 'Pz', 'pos_ydir', 'Oz', 'dimensions', [55, 75])),

    % Montage 6
    struct('electrode1', struct('centre', 'Cz', 'pos_ydir', 'P3', 'dimensions', [70, 50]), ...
           'electrode2', struct('centre', 'P3', 'pos_ydir', 'O1', 'dimensions', [70, 60])),

    % Montage 7
    struct('electrode1', struct('centre', 'FP1', 'pos_ydir', 'AF3', 'dimensions', [50, 50]), ...
           'electrode2', struct('centre', 'FP2', 'pos_ydir', 'AF4', 'dimensions', [50, 70])),

    % Montage 8
    struct('electrode1', struct('centre', 'C3', 'pos_ydir', 'C1', 'dimensions', [60, 60]), ...
           'electrode2', struct('centre', 'AF4', 'pos_ydir', 'F6', 'dimensions', [60, 80])),

    % Montage 9
    struct('electrode1', struct('centre', 'Fz', 'pos_ydir', 'Cz', 'dimensions', [60, 50]), ...
           'electrode2', struct('centre', 'Pz', 'pos_ydir', 'Oz', 'dimensions', [60, 70])),

    % Montage 10
    struct('electrode1', struct('centre', 'AF3', 'pos_ydir', 'F3', 'dimensions', [60, 60]), ...
           'electrode2', struct('centre', 'F4', 'pos_ydir', 'FC4', 'dimensions', [60, 80])),

    % Montage 11
    struct('electrode1', struct('centre', 'C1', 'pos_ydir', 'Cz', 'dimensions', [50, 60]), ...
           'electrode2', struct('centre', 'F4', 'pos_ydir', 'FC4', 'dimensions', [50, 70])),

    % Montage 12
    struct('electrode1', struct('centre', 'F3', 'pos_ydir', 'Fz', 'dimensions', [55, 55]), ...
           'electrode2', struct('centre', 'P4', 'pos_ydir', 'Pz', 'dimensions', [55, 75])),

    % Montage 13
    struct('electrode1', struct('centre', 'P3', 'pos_ydir', 'O1', 'dimensions', [60, 50]), ...
           'electrode2', struct('centre', 'C3', 'pos_ydir', 'C1', 'dimensions', [60, 70])),

    % Montage 14
    struct('electrode1', struct('centre', 'AF3', 'pos_ydir', 'F3', 'dimensions', [60, 60]), ...
           'electrode2', struct('centre', 'AF4', 'pos_ydir', 'F4', 'dimensions', [60, 80])),

    % Montage 15
    struct('electrode1', struct('centre', 'Cz', 'pos_ydir', 'Pz', 'dimensions', [70, 50]), ...
           'electrode2', struct('centre', 'Fz', 'pos_ydir', 'FCz', 'dimensions', [70, 60])),

    % Montage 16
    struct('electrode1', struct('centre', 'FP1', 'pos_ydir', 'F7', 'dimensions', [60, 60]), ...
           'electrode2', struct('centre', 'P3', 'pos_ydir', 'O1', 'dimensions', [60, 70])),

    % Montage 17
    struct('electrode1', struct('centre', 'F7', 'pos_ydir', 'T3', 'dimensions', [50, 50]), ...
           'electrode2', struct('centre', 'P4', 'pos_ydir', 'Pz', 'dimensions', [50, 70])),

    % Montage 18
    struct('electrode1', struct('centre', 'F4', 'pos_ydir', 'C4', 'dimensions', [50, 60]), ...
