    % Montage 22
    struct('electrode1', struct('centre', 'C1', 'pos_ydir', 'Cz', 'dimensions', [55, 55]), ...
           'electrode2', struct('centre', 'P4', 'pos_ydir', 'Pz', 'dimensions', [55, 75])),

